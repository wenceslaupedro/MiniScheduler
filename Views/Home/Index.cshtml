@{
    ViewData["Title"] = "Home";
}

<div class="container py-4">
    <div class="row align-items-center g-4">
        <div class="col-md-6">
            <h1>Welcome to Mini Scheduler</h1>
            <br><br>
            <p class="text-muted" style="text-align: justify;">Need to get a quick reminder? You’re in the right place. Mini Scheduler is a simple and efficient tool designed to help you schedule appointments without the hassle. Just choose your time, enter your details, and you're all set.

No accounts, no clutter—just clean, fast booking.</p>
            <hr />
            <p>
                <a class="btn btn-primary" asp-controller="Appointment" asp-action="Index">Go to appointments</a>
            </p>
        </div>
        <div class="col-md-6 text-center text-md-end">
            <img src="~/images/onecalendar.jpg" alt="Calendar" class="img-fluid rounded shadow-sm" style="max-height: 300px; object-fit: cover;" />
        </div>
    </div>
</div>
